@page
@model FinanceApp.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = null; // Use no layout for login page
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Finance App</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/assets/vendor/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/vendor/fonts/fontawesome/css/fontawesome-all.css" />
    <link rel="stylesheet" href="~/css/modern-style.css" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }
        .login-container {
            max-width: 450px;
            width: 100%;
        }
        .login-card {
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            overflow: hidden;
        }
        .login-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem;
            text-align: center;
        }
        .login-header h2 {
            margin: 0;
            font-weight: 700;
            font-size: 1.75rem;
        }
        .login-header p {
            margin: 0.5rem 0 0;
            opacity: 0.9;
        }
        .login-body {
            background: white;
            padding: 2rem;
        }
        .form-group label {
            font-weight: 600;
            color: #1e293b;
            margin-bottom: 0.5rem;
        }
        .demo-credentials {
            background: linear-gradient(135deg, rgba(16, 185, 129, 0.1) 0%, rgba(5, 150, 105, 0.1) 100%);
            border-left: 4px solid #10b981;
            padding: 1rem;
            border-radius: 8px;
            margin-top: 1.5rem;
        }
        .demo-credentials strong {
            color: #059669;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <h2><i class="fas fa-chart-line mr-2"></i>Finance App</h2>
                <p>Welcome back! Please login to continue</p>
            </div>
            <div class="login-body">
                <form id="account" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email">
                            <i class="fas fa-envelope mr-2"></i>Email Address
                        </label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="Enter your email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password">
                            <i class="fas fa-lock mr-2"></i>Password
                        </label>
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="Enter your password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="form-check">
                            <input asp-for="Input.RememberMe" class="form-check-input" id="RememberMe" />
                            <label class="form-check-label" for="RememberMe">
                                Remember me
                            </label>
                        </div>
                    </div>
                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-primary btn-block" style="padding: 0.75rem;">
                            <i class="fas fa-sign-in-alt mr-2"></i>Log In
                        </button>
                    </div>
                </form>
                <div class="demo-credentials">
                    <strong><i class="fas fa-info-circle mr-2"></i>Demo Credentials:</strong><br />
                    <i class="fas fa-envelope mr-2"></i>Email: <strong>admin@finance.com</strong><br />
                    <i class="fas fa-key mr-2"></i>Password: <strong>admin123</strong>
                </div>
            </div>
        </div>
    </div>

    <script src="~/assets/vendor/jquery/jquery-3.3.1.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>

