@model FinanceApp.Services.TrialBalanceReport
@{
    ViewData["Title"] = "Trial Balance";
}

<div class="row">
    <div class="col-xl-12">
        <div class="page-header">
            <h2 class="pageheader-title">Trial Balance</h2>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header">
                <form method="post" class="form-inline">
                    <div class="form-group mr-2">
                        <label>As of Date:</label>
                        <input type="date" name="asOfDate" value="@ViewBag.AsOfDate.ToString("yyyy-MM-dd")" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Generate</button>
                    @if (Model != null)
                    {
                        <a href="@Url.Action("ExportPDF", new { asOfDate = ViewBag.AsOfDate })" class="btn btn-success mr-2">Export PDF</a>
                        <a href="@Url.Action("ExportExcel", new { asOfDate = ViewBag.AsOfDate })" class="btn btn-info">Export Excel</a>
                    }
                </form>
            </div>
            @if (Model != null)
            {
                <div class="card-body">
                    <h4 class="text-center">Trial Balance as on @Model.AsOfDate.ToString("dd/MM/yyyy")</h4>
                    <table class="table table-bordered mt-3">
                        <thead>
                            <tr>
                                <th>Ledger Code</th>
                                <th>Ledger Name</th>
                                <th class="text-right">Debit Balance</th>
                                <th class="text-right">Credit Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.LedgerCode</td>
                                    <td>@item.LedgerName</td>
                                    <td class="text-right">@item.DebitBalance.ToString("C")</td>
                                    <td class="text-right">@item.CreditBalance.ToString("C")</td>
                                </tr>
                            }
                            <tr class="font-weight-bold">
                                <td colspan="2">TOTAL</td>
                                <td class="text-right">@Model.TotalDebit.ToString("C")</td>
                                <td class="text-right">@Model.TotalCredit.ToString("C")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

