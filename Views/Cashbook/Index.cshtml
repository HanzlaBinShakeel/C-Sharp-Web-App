@model FinanceApp.Services.CashbookReport
@{
    ViewData["Title"] = "Double Column Cashbook";
}

<div class="row">
    <div class="col-xl-12">
        <div class="page-header">
            <h2 class="pageheader-title">Double Column Cashbook</h2>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header">
                <form method="post" class="form-inline">
                    <div class="form-group mr-2">
                        <label>From Date:</label>
                        <input type="date" name="fromDate" value="@ViewBag.FromDate.ToString("yyyy-MM-dd")" class="form-control" />
                    </div>
                    <div class="form-group mr-2">
                        <label>To Date:</label>
                        <input type="date" name="toDate" value="@ViewBag.ToDate.ToString("yyyy-MM-dd")" class="form-control" />
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Generate</button>
                    @if (Model != null)
                    {
                        <a href="@Url.Action("ExportPDF", new { fromDate = ViewBag.FromDate, toDate = ViewBag.ToDate })" class="btn btn-success mr-2">Export PDF</a>
                        <a href="@Url.Action("ExportExcel", new { fromDate = ViewBag.FromDate, toDate = ViewBag.ToDate })" class="btn btn-info">Export Excel</a>
                    }
                </form>
            </div>
            @if (Model != null)
            {
                <div class="card-body">
                    <h4 class="text-center">Double Column Cashbook - @Model.FromDate.ToString("dd/MM/yyyy") to @Model.ToDate.ToString("dd/MM/yyyy")</h4>
                    <table class="table table-bordered mt-3">
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>Particulars</th>
                                <th class="text-right">Cash Receipt</th>
                                <th class="text-right">Cash Payment</th>
                                <th class="text-right">Bank Receipt</th>
                                <th class="text-right">Bank Payment</th>
                                <th class="text-right">Cash Balance</th>
                                <th class="text-right">Bank Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td colspan="2"><strong>Opening Balance</strong></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td class="text-right"><strong>@Model.OpeningCashBalance.ToString("C")</strong></td>
                                <td class="text-right"><strong>@Model.OpeningBankBalance.ToString("C")</strong></td>
                            </tr>
                            @foreach (var trans in Model.Transactions)
                            {
                                <tr>
                                    <td>@trans.Date.ToString("dd/MM/yyyy")</td>
                                    <td>@trans.Particulars</td>
                                    <td class="text-right">@(trans.CashReceipt > 0 ? trans.CashReceipt.ToString("C") : "-")</td>
                                    <td class="text-right">@(trans.CashPayment > 0 ? trans.CashPayment.ToString("C") : "-")</td>
                                    <td class="text-right">@(trans.BankReceipt > 0 ? trans.BankReceipt.ToString("C") : "-")</td>
                                    <td class="text-right">@(trans.BankPayment > 0 ? trans.BankPayment.ToString("C") : "-")</td>
                                    <td class="text-right">@trans.CashBalance.ToString("C")</td>
                                    <td class="text-right">@trans.BankBalance.ToString("C")</td>
                                </tr>
                            }
                            <tr class="font-weight-bold">
                                <td colspan="2">Closing Balance</td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td class="text-right">@Model.ClosingCashBalance.ToString("C")</td>
                                <td class="text-right">@Model.ClosingBankBalance.ToString("C")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

