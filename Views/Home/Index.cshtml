@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <h2 class="pageheader-title">
                <i class="fas fa-chart-line mr-2"></i>Finance Dashboard
            </h2>
            <p class="text-muted">Welcome back! Here's your financial overview.</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 col-12 mb-4">
        <div class="stat-card success">
            <div class="stat-card-icon">
                <i class="fas fa-arrow-up"></i>
            </div>
            <div class="stat-card-title">Total Income</div>
            <div class="stat-card-value">@ViewBag.TotalIncome.ToString("C")</div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 col-12 mb-4">
        <div class="stat-card danger">
            <div class="stat-card-icon">
                <i class="fas fa-arrow-down"></i>
            </div>
            <div class="stat-card-title">Total Expenses</div>
            <div class="stat-card-value">@ViewBag.TotalExpenses.ToString("C")</div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 col-12 mb-4">
        <div class="stat-card info">
            <div class="stat-card-icon">
                <i class="fas fa-wallet"></i>
            </div>
            <div class="stat-card-title">Cash on Hand</div>
            <div class="stat-card-value">@ViewBag.CashBalance.ToString("C")</div>
        </div>
    </div>
    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-12 col-12 mb-4">
        <div class="stat-card @((ViewBag.NetProfit >= 0) ? "success" : "warning")">
            <div class="stat-card-icon">
                <i class="fas fa-chart-line"></i>
            </div>
            <div class="stat-card-title">Net Profit</div>
            <div class="stat-card-value">@ViewBag.NetProfit.ToString("C")</div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-bolt mr-2"></i>Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 col-sm-6 mb-3">
                        <a href="@Url.Action("Create", "Receipt")" class="btn btn-primary btn-block">
                            <i class="fas fa-plus-circle mr-2"></i>New Receipt
                        </a>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <a href="@Url.Action("Create", "Payment")" class="btn btn-danger btn-block">
                            <i class="fas fa-minus-circle mr-2"></i>New Payment
                        </a>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <a href="@Url.Action("Create", "Journal")" class="btn btn-info btn-block">
                            <i class="fas fa-file-invoice mr-2"></i>New Journal
                        </a>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <a href="@Url.Action("Index", "BalanceSheet")" class="btn btn-success btn-block">
                            <i class="fas fa-balance-scale mr-2"></i>View Reports
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

