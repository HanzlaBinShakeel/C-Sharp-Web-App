@model List<FinanceApp.Models.FinancialYear>
@{
    ViewData["Title"] = "Financial Years";
}

<div class="row">
    <div class="col-xl-12">
        <div class="page-header">
            <h2 class="pageheader-title"><i class="fas fa-calendar-alt mr-2"></i>Financial Years</h2>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card modern-card">
            <div class="card-header modern-card-header">
                <h4 class="mb-0"><i class="fas fa-list mr-2"></i>Financial Year List</h4>
                <a href="@Url.Action("Create")" class="btn btn-gradient-primary">
                    <i class="fas fa-plus mr-1"></i>Create New Financial Year
                </a>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover modern-table">
                        <thead class="modern-table-header">
                            <tr>
                                <th>Year Name</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var year in Model)
                            {
                                <tr>
                                    <td>@year.YearName</td>
                                    <td>@year.StartDate.ToString("dd/MM/yyyy")</td>
                                    <td>@year.EndDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        @if (year.IsClosed)
                                        {
                                            <span class="badge badge-secondary">Closed</span>
                                        }
                                        else if (year.IsActive)
                                        {
                                            <span class="badge badge-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-light">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Edit", new { id = year.FinancialYearID })" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        @if (!year.IsActive && !year.IsClosed)
                                        {
                                            <form asp-action="SetActive" method="post" style="display:inline">
                                                <input type="hidden" name="id" value="@year.FinancialYearID" />
                                                <button type="submit" class="btn btn-sm btn-success">
                                                    <i class="fas fa-check"></i> Set Active
                                                </button>
                                            </form>
                                        }
                                        @if (year.IsActive && !year.IsClosed)
                                        {
                                            <form asp-action="Close" method="post" style="display:inline">
                                                <input type="hidden" name="id" value="@year.FinancialYearID" />
                                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to close this financial year?')">
                                                    <i class="fas fa-lock"></i> Close
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

