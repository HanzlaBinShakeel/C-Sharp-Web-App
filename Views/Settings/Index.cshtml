@model FinanceApp.Controllers.SettingsViewModel
@{
    ViewData["Title"] = "Settings";
}

<div class="row">
    <div class="col-xl-12">
        <div class="page-header">
            <h2 class="pageheader-title"><i class="fas fa-cog mr-2"></i>Settings</h2>
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle mr-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle mr-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="row">
    <div class="col-xl-8">
        <div class="card modern-card">
            <div class="card-header modern-card-header">
                <h4 class="mb-0"><i class="fas fa-calendar-alt mr-2"></i>Financial Year Settings</h4>
            </div>
            <div class="card-body">
                <div class="mb-4">
                    <h5>Current Active Financial Year</h5>
                    @if (Model.CurrentFinancialYear != null)
                    {
                        <div class="alert alert-info">
                            <strong>@Model.CurrentFinancialYear.YearName</strong><br />
                            <small>From: @Model.CurrentFinancialYear.StartDate.ToString("dd MMM yyyy") 
                                   To: @Model.CurrentFinancialYear.EndDate.ToString("dd MMM yyyy")</small>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="fas fa-exclamation-triangle mr-2"></i>No active financial year set. Please create and activate one.
                        </div>
                    }
                </div>

                <h5>All Financial Years</h5>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Year Name</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var year in Model.FinancialYears)
                            {
                                <tr>
                                    <td>@year.YearName</td>
                                    <td>@year.StartDate.ToString("dd MMM yyyy")</td>
                                    <td>@year.EndDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        @if (year.IsActive)
                                        {
                                            <span class="badge badge-success"><i class="fas fa-check mr-1"></i>Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!year.IsActive)
                                        {
                                            <form asp-action="SetActiveFinancialYear" method="post" style="display: inline;">
                                                <input type="hidden" name="financialYearId" value="@year.FinancialYearID" />
                                                <button type="submit" class="btn btn-sm btn-primary">
                                                    <i class="fas fa-check mr-1"></i>Set Active
                                                </button>
                                            </form>
                                        }
                                        <a href="@Url.Action("Index", "FinancialYear")" class="btn btn-sm btn-secondary">
                                            <i class="fas fa-edit mr-1"></i>Manage
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-4">
        <div class="card modern-card">
            <div class="card-header modern-card-header">
                <h4 class="mb-0"><i class="fas fa-link mr-2"></i>Quick Links</h4>
            </div>
            <div class="card-body">
                <div class="list-group list-group-flush">
                    <a href="@Url.Action("VoucherSettings")" class="list-group-item list-group-item-action">
                        <i class="fas fa-file-invoice mr-2"></i>Voucher Settings
                    </a>
                    <a href="@Url.Action("ReportSettings")" class="list-group-item list-group-item-action">
                        <i class="fas fa-file-pdf mr-2"></i>Report Settings
                    </a>
                    <a href="@Url.Action("SystemSettings")" class="list-group-item list-group-item-action">
                        <i class="fas fa-server mr-2"></i>System Settings
                    </a>
                    <a href="@Url.Action("Index", "FinancialYear")" class="list-group-item list-group-item-action">
                        <i class="fas fa-calendar mr-2"></i>Manage Financial Years
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

