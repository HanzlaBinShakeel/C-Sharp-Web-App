@model FinanceApp.Models.JournalEntry
@{
    ViewData["Title"] = "Payment Details";
}

<div class="row">
    <div class="col-xl-12">
        <div class="page-header">
            <h2 class="pageheader-title">Payment Voucher: @Model.EntryNumber</h2>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-body">
                <p><strong>Voucher Number:</strong> @Model.EntryNumber</p>
                <p><strong>Date:</strong> @Model.EntryDate.ToString("dd/MM/yyyy")</p>
                <p><strong>Reference:</strong> @Model.ReferenceNumber</p>
                <p><strong>Description:</strong> @Model.Description</p>
                <p><strong>Amount:</strong> @Model.TotalDebit.ToString("C")</p>
                
                <h5 class="mt-3">Entry Lines</h5>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Ledger</th>
                            <th>Debit</th>
                            <th>Credit</th>
                            <th>Description</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.JournalEntryLines != null)
                        {
                            @foreach (var line in Model.JournalEntryLines.OrderBy(l => l.Sequence))
                            {
                                <tr>
                                    <td>@line.Ledger?.LedgerName</td>
                                    <td>@line.DebitAmount.ToString("C")</td>
                                    <td>@line.CreditAmount.ToString("C")</td>
                                    <td>@line.Description</td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>

