@model FinanceApp.Models.Customer
@{
    ViewData["Title"] = "Delete Customer";
}

<div class="row">
    <div class="col-xl-12">
        <div class="page-header">
            <h2 class="pageheader-title"><i class="fas fa-trash mr-2"></i>Delete Customer</h2>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div class="card modern-card">
            <div class="card-header modern-card-header bg-danger text-white">
                <h4 class="mb-0"><i class="fas fa-exclamation-triangle mr-2"></i>Confirm Deletion</h4>
            </div>
            <div class="card-body">
                <h5>Are you sure you want to delete this customer?</h5>
                <div class="alert alert-warning">
                    <strong>Warning:</strong> If this customer has transactions, it will be marked as inactive instead of being deleted.
                </div>

                <table class="table table-bordered">
                    <tr>
                        <th width="30%">Customer Code:</th>
                        <td>@Model.CustomerCode</td>
                    </tr>
                    <tr>
                        <th>Customer Name:</th>
                        <td>@Model.CustomerName</td>
                    </tr>
                    <tr>
                        <th>Email:</th>
                        <td>@(Model.Email ?? "-")</td>
                    </tr>
                    <tr>
                        <th>Status:</th>
                        <td>
                            @if (Model.IsActive)
                            {
                                <span class="badge badge-success">Active</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">Inactive</span>
                            }
                        </td>
                    </tr>
                </table>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="CustomerID" />
                    <div class="form-group">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash mr-1"></i>Delete
                        </button>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">
                            <i class="fas fa-times mr-1"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

